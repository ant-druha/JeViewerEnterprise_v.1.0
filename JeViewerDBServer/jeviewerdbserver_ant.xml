<?xml version="1.0" encoding="UTF-8"?>
<project name="jeviewerdbserver" default="all">
  
  
  <property file="jeviewerdbserver_ant.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="128m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.ear"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.swc"/>
    <include name="*.ane"/>
    <include name="*.egg"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.7" value="${jdk.home.1.7}/bin"/>
  <path id="jdk.classpath.1.7">
    <fileset dir="${jdk.home.1.7}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxrt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="lib/tools.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.7}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.7}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.7"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.javaee-lib.classpath">
    <fileset dir="${basedir}/../../../../../../../../../glassfish3/glassfish/modules">
      <patternset refid="library.patterns"/>
    </fileset>
    <pathelement location="${basedir}/../../../../../../../../../glassfish3/glassfish/lib/appserv-rt.jar"/>
    <pathelement location="${basedir}/../../../../../../../../../glassfish3/glassfish/lib/gf-client.jar"/>
    <pathelement location="${basedir}/../../../../../../../../../glassfish3/glassfish/lib/javaee.jar"/>
  </path>
  
  <path id="library.lib.classpath">
    <pathelement location="${basedir}/dist/lib/JeViewerEnterprise-ejb.jar"/>
    <pathelement location="${basedir}/dist/lib/JeViewerEnterpriseRemoteMod.jar"/>
    <pathelement location="${basedir}/dist/lib/appserv-rt.jar"/>
    <pathelement location="${basedir}/dist/lib/gf-client.jar"/>
    <pathelement location="${basedir}/dist/lib/javaee-api-6.0.jar"/>
    <pathelement location="${basedir}/dist/lib/javaee.jar"/>
    <pathelement location="${basedir}/dist/lib/ojdbc6.jar"/>
  </path>
  
  
  <!-- Global Libraries -->
  
  
  <!-- Application Server Libraries -->
  
  <path id="library.glassfish_3.1.2.2.classpath">
    <pathelement location="C:/glassfish3/glassfish/modules/javax.ejb.jar"/>
    <pathelement location="C:/glassfish3/glassfish/modules/javax.servlet-api.jar"/>
    <pathelement location="C:/glassfish3/glassfish/modules/javax.servlet.jsp-api.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm4-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/module_jeviewerdbserver.xml"/>
  
  <import file="${basedir}/../JeViewerEnterprise/JeViewerEnterprise-ejb/src/module_jeviewerenterprise-ejb.xml"/>
  
  <import file="${basedir}/../JeViewerEnterprise/JeViewerEnterprise-war/src/module_jeviewerenterprise-war.xml"/>
  
  <import file="${basedir}/../JeViewerEnterpriseRemoteMod/src/module_jeviewerenterpriseremotemod.xml"/>
  
  <import file="${basedir}/../JeViwerClient/module_jeviwerclient.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.jeviewerdbserver, clean.module.jeviewerenterprise-ejb, clean.module.jeviewerenterprise-war, clean.module.jeviewerenterpriseremotemod, clean.module.jeviwerclient" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.jeviewerdbserver, compile.module.jeviewerenterprise-ejb, compile.module.jeviewerenterprise-war, compile.module.jeviewerenterpriseremotemod, compile.module.jeviwerclient" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.jeviewerenterprise-ejb" value="${basedir}/out/artifacts/JeViewerEnterprise-ejb"/>
    <property name="artifact.output.jeviewerenterprise-war" value="${basedir}/out/artifacts/JeViewerEnterprise-war"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.JeViewerEnterprise-ejb.jar" value="${artifacts.temp.dir}/JeViewerEnterprise-ejb.jar"/>
    <property name="temp.jar.path.JeViewerEnterprise-war.war" value="${artifacts.temp.dir}/JeViewerEnterprise-war.war"/>
  </target>
  
  <target name="artifact.jeviewerenterprise-ejb" depends="init.artifacts, compile.module.jeviewerenterprise-ejb, compile.module.jeviewerenterpriseremotemod" description="Build &#39;JeViewerEnterprise-ejb&#39; artifact">
    <property name="artifact.temp.output.jeviewerenterprise-ejb" value="${artifacts.temp.dir}/JeViewerEnterprise_ejb"/>
    <mkdir dir="${artifact.temp.output.jeviewerenterprise-ejb}"/>
    <jar destfile="${temp.jar.path.JeViewerEnterprise-ejb.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset file="${basedir}/../JeViewerEnterprise/JeViewerEnterprise-ejb/src/META-INF/glassfish-ejb-jar.xml" prefix="META-INF"/>
      <zipfileset dir="${jeviewerenterprise-ejb.output.dir}"/>
      <zipfileset file="${basedir}/../JeViewerEnterprise/JeViewerEnterprise-ejb/src/conf/MANIFEST.MF" prefix="META-INF"/>
      <zipfileset dir="${jeviewerenterpriseremotemod.output.dir}"/>
    </jar>
    <copy file="${temp.jar.path.JeViewerEnterprise-ejb.jar}" tofile="${artifact.temp.output.jeviewerenterprise-ejb}/JeViewerEnterprise-ejb.jar"/>
  </target>
  
  <target name="artifact.jeviewerenterprise-war" depends="init.artifacts, compile.module.jeviewerenterprise-war" description="Build &#39;JeViewerEnterprise-war&#39; artifact">
    <property name="artifact.temp.output.jeviewerenterprise-war" value="${artifacts.temp.dir}/JeViewerEnterprise_war"/>
    <mkdir dir="${artifact.temp.output.jeviewerenterprise-war}"/>
    <zip destfile="${temp.jar.path.JeViewerEnterprise-war.war}">
      <zipfileset dir="${jeviewerenterprise-war.output.dir}" prefix="WEB-INF/classes"/>
      <zipfileset file="${basedir}/../JeViewerEnterprise/JeViewerEnterprise-war/build/web/WEB-INF/lib/JeViewerEnterpriseRemoteMod.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/../JeViewerEnterprise/JeViewerEnterprise-war/src/conf/MANIFEST.MF" prefix="META-INF"/>
      <zipfileset dir="${basedir}/../JeViewerEnterprise/JeViewerEnterprise-war/build/web"/>
      <zipfileset file="${basedir}/../JeViewerEnterprise/JeViewerEnterprise-war/src/web/WEB-INF/web.xml" prefix="WEB-INF"/>
      <zipfileset file="${basedir}/../JeViewerEnterprise/JeViewerEnterprise-war/src/WEB-INF/glassfish-web.xml" prefix="WEB-INF"/>
      <zipfileset file="${basedir}/../JeViewerEnterprise/JeViewerEnterprise-war/web/index.jsp"/>
    </zip>
    <copy file="${temp.jar.path.JeViewerEnterprise-war.war}" tofile="${artifact.temp.output.jeviewerenterprise-war}/JeViewerEnterprise-war.war"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.jeviewerenterprise-ejb, artifact.jeviewerenterprise-war" description="Build all artifacts">
    <mkdir dir="${artifact.output.jeviewerenterprise-ejb}"/>
    <copy todir="${artifact.output.jeviewerenterprise-ejb}">
      <fileset dir="${artifact.temp.output.jeviewerenterprise-ejb}"/>
    </copy>
    <mkdir dir="${artifact.output.jeviewerenterprise-war}"/>
    <copy todir="${artifact.output.jeviewerenterprise-war}">
      <fileset dir="${artifact.temp.output.jeviewerenterprise-war}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>