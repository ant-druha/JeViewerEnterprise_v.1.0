<?xml version="1.0" encoding="UTF-8"?>
<project name="module_jeviewerdbserver" default="compile.module.jeviewerdbserver">
  <dirname property="module.jeviewerdbserver.basedir" file="${ant.file.module_jeviewerdbserver}"/>
  
  <property name="module.jdk.home.jeviewerdbserver" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.jeviewerdbserver" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.jeviewerdbserver" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.jeviewerdbserver" value="${compiler.args}"/>
  
  <property name="jeviewerdbserver.output.dir" value="${module.jeviewerdbserver.basedir}/out/production/JeViewerDBServer"/>
  <property name="jeviewerdbserver.testoutput.dir" value="${module.jeviewerdbserver.basedir}/out/test/JeViewerDBServer"/>
  
  <path id="jeviewerdbserver.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="jeviewerdbserver.module.production.classpath">
    <pathelement location="${basedir}/lib/ojdbc6.jar"/>
    <pathelement location="${basedir}/../../../../../../../../../Java/glassfish-3.1.2.2/glassfish/lib/gf-client.jar"/>
    <pathelement location="${basedir}/../../../../../../../../../Java/glassfish-3.1.2.2/glassfish/lib/appserv-rt.jar"/>
    <pathelement location="${basedir}/../../../../../../../../../Java/glassfish-3.1.2.2/glassfish/lib/javaee.jar"/>
    <fileset dir="${basedir}/../../../../../../../../../Java/glassfish-3.1.2.2/glassfish/modules">
      <patternset refid="library.patterns"/>
    </fileset>
    <path refid="${module.jdk.classpath.jeviewerdbserver}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.javaee-lib.classpath"/>
  </path>
  
  <path id="jeviewerdbserver.runtime.production.module.classpath">
    <pathelement location="${jeviewerdbserver.output.dir}"/>
    <pathelement location="${basedir}/lib/ojdbc6.jar"/>
    <pathelement location="${basedir}/../../../../../../../../../Java/glassfish-3.1.2.2/glassfish/lib/gf-client.jar"/>
    <pathelement location="${basedir}/../../../../../../../../../Java/glassfish-3.1.2.2/glassfish/lib/appserv-rt.jar"/>
    <pathelement location="${basedir}/../../../../../../../../../Java/glassfish-3.1.2.2/glassfish/lib/javaee.jar"/>
    <fileset dir="${basedir}/../../../../../../../../../Java/glassfish-3.1.2.2/glassfish/modules">
      <patternset refid="library.patterns"/>
    </fileset>
    <path refid="library.lib.classpath"/>
    <path refid="library.javaee-lib.classpath"/>
  </path>
  
  <path id="jeviewerdbserver.module.classpath">
    <pathelement location="${jeviewerdbserver.output.dir}"/>
    <pathelement location="${basedir}/lib/ojdbc6.jar"/>
    <pathelement location="${basedir}/../../../../../../../../../Java/glassfish-3.1.2.2/glassfish/lib/gf-client.jar"/>
    <pathelement location="${basedir}/../../../../../../../../../Java/glassfish-3.1.2.2/glassfish/lib/appserv-rt.jar"/>
    <pathelement location="${basedir}/../../../../../../../../../Java/glassfish-3.1.2.2/glassfish/lib/javaee.jar"/>
    <fileset dir="${basedir}/../../../../../../../../../Java/glassfish-3.1.2.2/glassfish/modules">
      <patternset refid="library.patterns"/>
    </fileset>
    <path refid="${module.jdk.classpath.jeviewerdbserver}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.javaee-lib.classpath"/>
  </path>
  
  <path id="jeviewerdbserver.runtime.module.classpath">
    <pathelement location="${jeviewerdbserver.testoutput.dir}"/>
    <pathelement location="${jeviewerdbserver.output.dir}"/>
    <pathelement location="${basedir}/lib/ojdbc6.jar"/>
    <pathelement location="${basedir}/../../../../../../../../../Java/glassfish-3.1.2.2/glassfish/lib/gf-client.jar"/>
    <pathelement location="${basedir}/../../../../../../../../../Java/glassfish-3.1.2.2/glassfish/lib/appserv-rt.jar"/>
    <pathelement location="${basedir}/../../../../../../../../../Java/glassfish-3.1.2.2/glassfish/lib/javaee.jar"/>
    <fileset dir="${basedir}/../../../../../../../../../Java/glassfish-3.1.2.2/glassfish/modules">
      <patternset refid="library.patterns"/>
    </fileset>
    <path refid="library.lib.classpath"/>
    <path refid="library.javaee-lib.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.jeviewerdbserver">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.jeviewerdbserver">
    <patternset refid="excluded.from.module.jeviewerdbserver"/>
  </patternset>
  
  <path id="jeviewerdbserver.module.sourcepath">
    <dirset dir="${module.jeviewerdbserver.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.jeviewerdbserver" depends="compile.module.jeviewerdbserver.production,compile.module.jeviewerdbserver.tests" description="Compile module JeViewerDBServer"/>
  
  <target name="compile.module.jeviewerdbserver.production" depends="register.custom.compilers" description="Compile module JeViewerDBServer; production classes">
    <mkdir dir="${jeviewerdbserver.output.dir}"/>
    <javac2 destdir="${jeviewerdbserver.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.jeviewerdbserver}/javac">
      <compilerarg line="${compiler.args.jeviewerdbserver}"/>
      <bootclasspath refid="jeviewerdbserver.module.bootclasspath"/>
      <classpath refid="jeviewerdbserver.module.production.classpath"/>
      <src refid="jeviewerdbserver.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.jeviewerdbserver"/>
    </javac2>
    
    <copy todir="${jeviewerdbserver.output.dir}">
      <fileset dir="${module.jeviewerdbserver.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.jeviewerdbserver.tests" depends="register.custom.compilers,compile.module.jeviewerdbserver.production" description="compile module JeViewerDBServer; test classes" unless="skip.tests"/>
  
  <target name="clean.module.jeviewerdbserver" description="cleanup module">
    <delete dir="${jeviewerdbserver.output.dir}"/>
    <delete dir="${jeviewerdbserver.testoutput.dir}"/>
  </target>
</project>